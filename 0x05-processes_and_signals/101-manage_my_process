#!/usr/bin/env bash
# Bash script that manages the manage_my_process script.

PIDFILE=/var/run/my_process.pid
MANAGE_SCRIPT=/full/path/to/manage_my_process  # Replace with the full path

start() {
    if [ -e "$PIDFILE" ]; then
        echo "manage_my_process is already running. Remove $PIDFILE if it's not."
    else
        "$MANAGE_SCRIPT" &
        echo "$!" > "$PIDFILE"
        echo "manage_my_process started"
    fi
}

stop() {
    if [ -e "$PIDFILE" ]; then
        sudo kill -15 "$(cat "$PIDFILE")" && rm -f "$PIDFILE"
        echo "manage_my_process stopped"
    else
        echo "manage_my_process is not running (no PID file found)."
    fi
}

restart() {
    stop
    start
    echo "manage_my_process restarted"
}

case "$1" in
    start)
       start
       ;;
    stop)
       stop
       ;;
    restart)
       restart
       ;;
    *)
       echo "Usage: $0 {start|stop|restart}"
       exit 1
       ;;
esac

exit 0
