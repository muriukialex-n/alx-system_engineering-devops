#!/bin/bash

# Define the path to your manage_my_process script
SCRIPT_PATH="/path/to/manage_my_process"

# Check for the correct number of arguments
if [ $# -ne 1 ]; then
  echo "Usage: $0 {start|stop|restart}"
  exit 1
fi

# Define the PID file path
PID_FILE="/var/run/my_process.pid"

# Function to start the process
start_process() {
  if [ -f "$PID_FILE" ]; then
    echo "Error: Process is already running."
    exit 1
  else
    $SCRIPT_PATH &
    echo $! > "$PID_FILE"
    echo "manage_my_process started"
  fi
}

# Function to stop the process
stop_process() {
  if [ -f "$PID_FILE" ]; then
    kill $(cat "$PID_FILE")
    rm "$PID_FILE"
    echo "manage_my_process stopped"
  else
    echo "Error: Process is not running."
    exit 1
  fi
}

# Function to restart the process
restart_process() {
  if [ -f "$PID_FILE" ]; then
    stop_process
  fi
  start_process
}

# Main script
case "$1" in
  start)
    start_process
    ;;
  stop)
    stop_process
    ;;
  restart)
    restart_process
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
    exit 1
    ;;
esac

exit 0
